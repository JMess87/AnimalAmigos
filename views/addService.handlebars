<h1>Inside add service handlebars page</h1>


<div class="container mt-3">
    <div class="card p-3 text-center">
        <form class="service-form row">
            <div class="col-md-12 justify-content-center">
                <div class="inputs"> <label>Service Name*</label> <input class="form-control" type="text" id="serviceName"
                        placeholder="Enter service name*"> </div>
            </div>
            <div class="col-md-12 justify-content-center">
                <div class="inputs"> <label>Service Description*</label> <input class="form-control" type="text" id="serviceDescription"
                        placeholder="Enter service description*"> </div>
            </div>
            <div class="col-md-12 justify-content-center">
                <div class="inputs"> <label>Service Price*</label> <input class="form-control" type="text" id="servicePrice"
                        placeholder="Enter service price*"> </div>
            </div>
            <div class="col-md-12 justify-content-center">
                <div class="inputs"> <label>Service Status*</label> <input class="form-control" type="text" id="serviceStatus"
                        placeholder="Enter service status*"> </div>
            </div>
            <div class="col-md-12 justify-content-center">
                <div class="inputs"> <label>Service Date*</label> <input class="form-control" type="text" id="serviceDate"
                        placeholder="Enter service date*"> </div>
            </div>
            <div class="col-md-12 justify-content-center">
                <div class="inputs"> <label>Service Time*</label> <input class="form-control" type="text" id="serviceTime"
                        placeholder="Enter service time*"> </div>
            </div>
            <div class="col-md-12 justify-content-center">
                <div class="inputs"> <label>Service Location*</label> <input class="form-control" type="text" id="serviceLocation"
                        placeholder="Enter service location*"> </div>
            </div>

            <br><br>
            <div class="col-md-12 mt-3 gap-2 d-flex justify-content-end row">
                <button class="px-3 btn btn-sm btn-primary" type="submit">Add</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/service.js"></script>