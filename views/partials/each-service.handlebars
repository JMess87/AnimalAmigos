<div class="row p-2 bg-white border rounded mb-3">

    <div class="col-md-3 mt-1">
        <img class="img-fluid img-responsive rounded product-image img-service-square" src="../assets/Cat.jpg">
    </div>

    <div class="col-md-6 text-start">
        <p class="mb-2" id="post-date-text">{{ service_date }}</p>
        <h5 class="mb-3" id="service-title">{{ service_name }}</h5>
        <p class="mb-3" id="service-description">{{ service_description }}</p>
        <p id="service-user-location-text">By User in {{ service_location }}</p>
        <p class="mb-1 service-likes">Likes: 10</p>
    </div>

    <div class="align-items-center align-content-center col-md-3 border-left mt-1">
        <div class="d-flex flex-row align-items-center service-points">
            <h4 class="me-2">{{ service_price }}</h4><span class="strike-text">Points</span>
        </div>
        <div class="d-flex flex-column align-items-start mt-2">
            <p>Status: {{ service_status }}</p>
            <p>Responder: N/A </p>
        </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button class="btn btn-primary me-md-2" type="button" style="display:none">Accept</button>
        <button class="btn btn-primary" type="button" style="display:none">Deny</button>
        <button class="btn btn-primary" type="button" style="display:none">Finish</button>
        <button class="btn btn-primary" type="button" style="display:none">Validate</button>
        <button class="btn btn-primary profile-button" type="button" data-bs-toggle="modal"
            data-bs-target="#editModal">Edit</button>
        <button class="btn btn-primary profile-button" type="button" id="delete" data-id="{{ id }}">Delete</button>
    </div>

</div>
<!-- CARD 1 - END -->

<!-- Modal -->
<div class="modal" id="editModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">

            <!-- Modal body -->
            <div class="modal-body">

                <div class="d-flex justify-content-center row">
                    <div class="col-md-10">
                        <div class="row p-2 bg-white">
                            <div class="col-md-3 mt-1 wrapper">
                                <div class="content">
                                    <img class="img-fluid img-responsive rounded product-image img-service-square"
                                        src="../assets/Cat.jpg">
                                    <a href="#"><i class="fa-solid fa-camera fa-2xl"></i></a>
                                </div>
                            </div>

                            <!-- comments information -->
                            <div class="col-md-6 mt-1 text-start">
                                <p class="mb-2" id="post-date-text">Date: {{ service_date }}</p>
                                <h5 class="mb-3" id="service-title">Title: {{ service_name }}</h5>
                                <p class="mb-3" id="service-description">Description: {{ service_description }}</p>
                                <p id="service-user-location-text">By User and Location: {{ service_location }}</p>
                                <p class="mb-5 service-likes">Likes: Number</p>

                                <!-- form input box to create or update services-->
                                <form class="edit-service-form row">
                                    <div class="mb-3">
                                        <div class="inputs">
                                            <label>Service Name</label>
                                            <input class="form-control" type="text" id="serviceName"
                                                value="{{ service_name }}">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="inputs">
                                            <label>Service Description</label>
                                            <input class="form-control" type="text" id="serviceDescription"
                                                value="{{ service_description }}">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="inputs">
                                            <label>Service Price</label>
                                            <input class="form-control" type="text" id="servicePrice"
                                                value="{{ service_price }}">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="inputs">
                                            <label>Service Status</label>
                                            <input class="form-control" type="text" id="serviceStatus"
                                                value="{{ service_status }}">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="inputs">
                                            <label>Service Date</label>
                                            <input class="form-control" type="text" id="serviceDate"
                                                value="{{ service_date }}">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="inputs">
                                            <label>Service Time</label>
                                            <input class="form-control" type="text" id="serviceTime"
                                                value="{{ service_time }}">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="inputs">
                                            <label>Service Location</label>
                                            <input class="form-control" type="text" id="serviceLocation"
                                                value="{{ service_location }}">
                                        </div>
                                    </div>
                                    {{!-- <div class="d-flex flex-column mt-4 row">
                                        <button class="px-3 btn btn-sm btn-primary" id="save"
                                            data-id="{{ id }}">Save</button>
                                    </div> --}}
                                </form>

                            </div>

                            <!-- side information and buttons -->
                            <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                                <div class="d-flex flex-row align-items-center service-points">
                                    <h4 class="mr-1 me-2">{{ service_price }}</h4><span
                                        class="strike-text">Points</span>
                                </div>
                                <div class="d-flex flex-column align-items-start mt-2">
                                    <p>Status: {{ service_status }}</p>
                                    <p>Responder: N/A if null</p>
                                </div>
                            </div>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button class="btn btn-primary mt-2 profile-button" type="button" id="save"
                                data-id="{{ id }}">Save</button>
                            <button class="btn btn-primary mt-2 profile-button" type="button"
                                data-bs-dismiss="modal">Cancel</button>
                            {{!-- <button class="btn btn-primary mt-2 profile-button" id="save"
                                data-id="{{ id }}">Save</button> --}}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal END -->

