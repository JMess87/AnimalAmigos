<div class="card mb-3" style="width: 60rem;">
            <a href="https://placeholder.com">
                <img src="https://via.placeholder.com/200x75" class="card-img-top mt-3" alt="placeholder-img">
            </a>
            <div class="card-body">
                <h5 class="card-title">Post title: {{ service_name }}</h5>
                <p class="card-text">Description: {{ service_description }}</p>
                <p class="card-text">By User in location name: {{ service_location }}</p>
                <p class="card-text">Post date: {{ service_date }}</p>
                <p class="card-text">Likes: Number</p>
                <p class="card-text">Points (per day): {{ service_price }}</p>
                <p class="card-text">Status: {{ service_status }}</p>
                <p class="card-text">Responder: </p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
                    Details
                </button>
                <a href="#" class="btn btn-primary">Contact</a>
            </div>
</div>

<section class="container text-center">
    <!-- The Modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <!-- Modal body -->
                <div class="modal-body">

                    <div class="d-flex justify-content-center row">
                        <div class="col-md-10">
                            <div class="row p-2 bg-white">
                                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image"
                                        src="../assets/Cat.jpg"></div>

                                <!-- comments information -->
                                <div class="col-md-6 mt-1">
                                    <h5 class="text-start">Post Title: {{ service_name }}</h5>
                                    <p class="text-start">Description: {{ service_description }}</p>
                                    <p class="text-start">By User in location name {{ service_location }}</p>
                                    <p class="text-start">Post date {{ service_date }}</p>
                                    <p class="text-start">Likes: Number</p>

                                    <!-- Existing comments from database -->
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-start mb-3">
                                                <img src="../assets/Dog.jpg" width="50" class="rounded-circle">
                                                <h5 class="card-title text-start">Reviewer's Name</h5>
                                            </div>

                                            <h6 class="card-subtitle mb-2 text-muted text-start">number days ago
                                            </h6>
                                            <h6 class="card-subtitle mb-2 text-muted text-start">Likes: number
                                            </h6>
                                            <p class="card-text text-start"> User's comments reviewing this
                                                service.</p>
                                        </div>
                                    </div>

                                    <!-- Comments box -->
                                    <div class="form-floating mt-3">
                                        <textarea class="form-control" placeholder="Leave a comment here"
                                            id="floatingTextarea2" style="height: 100px"></textarea>
                                        <label for="floatingTextarea2">Leave some comments here</label>
                                    </div>

                                </div>

                                <!-- side information and buttons -->
                                <div class="align-items-center align-content-center col-md-3 border-left mt-1">
                                    <div class="d-flex flex-row align-items-center">
                                        <h4 class="mr-1">40</h4><span class="strike-text">Points: {{ service_price }}</span>
                                    </div>

                                    <div class="d-flex flex-column align-items-start mt-2">
                                        <p>Status: {{ service_status }}</p>
                                        <p>Responder: N/A if null</p>
                                    </div>

                                    <div class="d-flex flex-column mt-4">
                                        <button class="btn btn-primary btn-sm mt-2" type="button">Like</button>
                                        <button class="btn btn-primary btn-sm mt-2" type="button">Book</button>
                                        <button class="btn btn-primary btn-sm mt-2" type="button">Contact</button>
                                        <button class="btn btn-outline-primary btn-sm mt-2" type="button">Save
                                            Comments</button>
                                    </div>


                                </div>
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                            </div>

                        </div>
                    </div>
                </div>
</section>