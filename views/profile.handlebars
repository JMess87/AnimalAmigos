<div class="container mt-5">
    <div class="row d-flex justify-content-center">

        <div class="col-md-10">

            <div class="card p-3 py-4">

                <div class="text-center">
                    <img src="../assets/Dog.jpg" width="auto" class="rounded-circle">
                </div>

                <div class="text-center mt-3">
                    <h5 class="mt-2 mb-0">{{ first_name }} {{ last_name }}</h5>
                    <span>{{ address.city }}</span>
                    <br>
                    <span>{{ email }}</span>
                    <br>
                    <span>Phone: 234-234-2345</span>
                    <br>
                    <button class="btn btn-outline-primary btn-sm mt-2" type="button" data-bs-toggle="modal"
                data-bs-target="#editModal">Edit Profile</button>
                    <!-- CARD 1 -->
                    <div class="container mt-5 mb-5">
                        <div class="d-flex justify-content-center row">
                            <div class="col-md-10">
                                {{#each services as |service|}}
                                {{> each-service }}
                                {{/each}}
                            </div>
                        </div>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal" id="editModal">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <!-- Modal body -->
                <div class="modal-body">

                    <div class="d-flex justify-content-center row">
                        <div class="col-md-10">
                            <div class="row p-2 bg-white">
                                <div class="col-md-3 mt-1"><img class="img-fluid img-responsive rounded product-image"
                                        src="../assets/Cat.jpg"></div>

                                    <form class="row">
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>First Name</label>
                                                <input class="form-control" type="text" id="firstName"
                                                    value="{{ first_name }}">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>Last Name</label>
                                                <input class="form-control" type="text" id="lastName"
                                                    value="{{ last_name }}">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>Email</label>
                                                <input class="form-control" type="text" id="email"
                                                    value="{{ email }}">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>Password</label>
                                                <input class="form-control" type="text" id="password">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>Address</label>
                                                <input class="form-control" type="text" id="address">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>City</label>
                                                <input class="form-control" type="text" id="city">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>State</label>
                                                <input class="form-control" type="text" id="state">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>Zip</label>
                                                <input class="form-control" type="text" id="zip">
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="inputs">
                                                <label>Country</label>
                                                <input class="form-control" type="text" id="country">
                                            </div>
                                        </div>
                                        <div class="d-flex flex-column mt-4 row">
                                            <button class="px-3 btn btn-sm btn-primary" id="saveprofile"
                                                data-id="{{ id }}">Save</button>
                                        </div>
                                    </form>

                                </div>
                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


 <script src="/js/editProfile.js"></script>